---
layout: null
---
{
  "version": "https://jsonfeed.org/version/1.1",
  "title": "{{ site.title }}",
  {% if site.description %}"description": "{{ site.description }}",{% endif %}
  "home_page_url": "{{ site.baseurl | prepend: site.url }}",
  "feed_url": "{{site.baseurl | prepend: site.url }}feed.json",
  {% if site.posts %}
  "items": [
    {% for post in site.posts limit: 100 %}
    {
      "id": "{{ post.slug }}",
      "title": "{{ post.title }}",
      "description": "{{ post.description }}",
      "image": "{{ post.thumbnail | prepend: site.baseurl | prepend: site.url }}",
      "date_published": "{{ post.date | date_to_xmlschema }}",
      "link": "{{ post.url | prepend: site.baseurl | prepend: site.url }}",
      {% if post.tags or post.categories %}
      "tags": [
        {% for tag in post.tags %}"{{ tag }}"{% unless forloop.last %},{% endunless %}{% endfor %}
        {% for cat in post.categories %}"{{ cat }}"{% unless forloop.last %},{% endunless %}{% endfor %}
      ]
      {% endif %}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
  {% endif %}
}
